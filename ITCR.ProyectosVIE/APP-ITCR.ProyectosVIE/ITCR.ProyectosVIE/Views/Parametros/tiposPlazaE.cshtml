@model ITCR.ProyectosVIE.Models.Parametros.TiposPlazaModel
@{
    ViewBag.Title = "Parámetros";
    ViewBag.activeIndex = 0;
}
@section styles {
}
<div class="container">
    <div class="row">
        @Html.Partial("_NavIndex")
        <div class="span9">
            <div class="hero-unit">
                <div class="row-fluid">
                    <div class="span3 offset10">
                        <a href="#delConfirm" role="button" class="btn btn-danger" data-toggle="modal"><i class="icon-trash"></i>Eliminar</a>
                    </div>
                </div>
                <h3>Agregar Tipos de Plaza</h3>

                <dl></dl>
                @using (Html.BeginForm("AddorUpdateTiposPlaza", "Parametros", new { parentView = "tiposPlazaE" }, FormMethod.Post, new { @class = "form-horizontal" }))
                {        
                    <div class="control-group">
                        <label class="control-label">Código de Tipo de Plaza</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.COD_TIPOPLAZA, htmlAttributes: new { placeholder = "Código de Proyecto", disabled = true })
                            @Html.HiddenFor(m => m.COD_TIPOPLAZA)
                            @Html.ValidationMessageFor(m => m.COD_TIPOPLAZA, "", new { @class = "help-inline" })
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Descripción Tipo de Plaza</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.DSC_TIPOPLAZA, htmlAttributes: new { placeholder = "Nombre de Proyecto" })
                            @Html.ValidationMessageFor(m => m.DSC_TIPOPLAZA, "", new { @class = "help-inline" })
                        </div>
                    </div>    
                    <div class="control-group">
                        <div class="controls">
                            <a  href="@Url.Action("tiposPlazaI", "Parametros")" class="btn btn-danger" ><i class="icon-arrow-left"></i>Cancelar</a>
                            <button type="submit" class="btn btn-success"><i class="icon-ok-sign"></i>Salvar</button>
                        </div>
                    </div>                                         
                }
                @if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationSummary("", htmlAttributes: new { @class = "alert alert-error" })
                }
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "delConfirm", @class = "modal hide fade", tabindex = "-1", role = "dialog" }))
{  
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3>Alerta</h3>
    </div>
    <div class="modal-body">
        <p>Esta seguro que desea Eliminar el Registro?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">No, Cancelar</button>
        @Html.ActionLink("Sí, Eliminar", "tiposPlazaD",
                                            "Parametros",
                                            new { id = @Model.COD_TIPOPLAZA },
                                            new { @class = "btn btn-primary" })
    </div>    
}