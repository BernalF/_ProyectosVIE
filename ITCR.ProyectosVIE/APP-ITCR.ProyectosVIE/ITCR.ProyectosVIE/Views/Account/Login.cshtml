@model ITCR.ProyectosVIE.Models.cLoginModel


@section styles {
    <style type="text/css">
        body {
            
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }

            .form-signin .form-signin-heading,
            .form-signin .checkbox {
                margin-bottom: 10px;
            }

            .form-signin input[type="text"],
            .form-signin input[type="password"] {
                font-size: 16px;
                height: auto;
                margin-bottom: 15px;
                padding: 7px 9px;
            }
    </style>
}
<div class="hero-unit">
    <div class="title">
        <h2>Vicerrectoria de Investigación y Extensión</h2>
        <h4>Gestión y Administración de Proyectos</h4>
    </div>
    <div class="row">
        <div class="span3"></div>
        <div class="span5">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
            {    
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
    
                <h2 class="form-signin-heading">Inicio de Sesion</h2>
                @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level", placeholder = "Nombre Usuario" })
                @Html.ValidationMessageFor(m => m.UserName)

                @Html.PasswordFor(m => m.Password, new { @class = "input-block-level", placeholder = "Contraseña" })
                @Html.ValidationMessageFor(m => m.Password)

                <label class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.ValidationMessageFor(m => m.RememberMe)
                    Recordar
                </label>
                <button class="btn btn-large btn-primary" type="submit">Ingresar</button>         
            }
        </div>
    </div>
</div>

@section scripts {

}
